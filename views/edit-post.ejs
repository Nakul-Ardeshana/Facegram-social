<%- include('includes/header') %>
<script src="/views/includes/textArea.js"></script>
<div class="container py-md-5 container--narrow">

   <%- include('includes/flash') %> 

  <a class="small font-weight-bold" href="/post/<%= post._id %>">&laquo; Back to post permalink</a>

  <form class="mt-3" action="/post/<%= post._id %>/edit" method="POST">
    <div class="form-group">
      <label for="post-title" class="text-muted mb-1"><small>Title</small></label>
      <input name="title" value="<%= post.title %>" id="post-title" class="form-control form-control-lg form-control-title" type="text" placeholder="" autocomplete="off">
    </div>
    
    <%- include('textarea/textArea.ejs') %>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button class="btn btn-primary">Save updated post</button>
  </form>

  <%- include('includes/syntaxTable') %>


</div>

<%-  include('includes/footer') %>
